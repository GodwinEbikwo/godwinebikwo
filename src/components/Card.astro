---
interface Props {
  title: string;
  body: string;
  href: string;
  tags: string[];
}

const { href, title, body, tags } = Astro.props;
---

<li class='link-card'>
  <a href={href}>
    <h2 class='title'>
      {title}
      <span>&rarr;</span>
    </h2>
    <div class='eclipse-text-container'>
      <p>
        {body}
      </p>
    </div>
  </a>

  {
    tags && (
      <ul class='tags'>
        {tags.map((tag) => (
          <li class='tag'>
            <a href={`/tags/${tag}`}>{tag}</a>
          </li>
        ))}
      </ul>
    )
  }
</li>

<style lang='scss'>
  .link-card {
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.1);
    border-image: initial;
    border-radius: var(--border-radius);
    background-position: 100%;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .link-card > a {
    position: relative;
    width: 100%;
    line-height: 1.4;
    padding: 1rem 1rem;
    border-radius: calc(var(--border-radius) - 0.15rem);

    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    padding: 1rem 1rem;
  }

  .tag {
    backdrop-filter: blur(12px);
    border-image: initial;
    background-position: 100%;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    margin-right: 0.5rem;
    padding: 0.5em 1em;
    text-transform: capitalize;

    &:last-child {
      margin-right: 0;
    }
  }

  .title {
    font-size: 1.15rem;
    font-weight: 600;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    letter-spacing: -0.025em;
    color: #fff;
  }

  p {
    display: block;
    margin-top: 0.25rem !important ;
    margin-bottom: 0;
    color: var(--text-bright-accent);
  }
</style>
