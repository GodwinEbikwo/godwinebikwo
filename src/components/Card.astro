---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class='link-card'>
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <div class='eclipse-text-container'>
      <p>
        {body}
      </p>
      <div class='eclipse-shadow'></div>
    </div>
  </a>
</li>

