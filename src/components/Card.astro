---
interface Props {
  title: string;
  body: string;
  href: string;
  tags: string[];
}

const { href, title, body, tags } = Astro.props;
---

<li class='link-card'>
  <a href={href}>
    <h2 class='title'>
      {title}
      <span>&rarr;</span>
    </h2>

    <p>
      {body}
    </p>
  </a>

  {
    tags && (
      <ul class='tags'>
        {tags.map((tag) => (
          <li>
            <a class='tag' href={`/tags/${tag}`}>
              {tag}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</li>

<style lang='scss'>
  .link-card {
    list-style: none;
    width: 100%;
    backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.1);
    border-image: initial;
    border-radius: var(--border-radius);
    background-position: 100%;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .link-card > a {
    position: relative;
    width: 100%;
    line-height: 1.4;
    padding: 1rem 1rem;
    border-radius: calc(var(--border-radius) - 0.15rem);
    display: flex;
    flex-direction: column;
  }

  .title {
    font-size: 1.15rem;
    font-weight: 600;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    letter-spacing: -0.025em;
    color: #fff;
  }

  p {
    display: block;
    margin-top: 0.25rem !important ;
    margin-bottom: 0;
    color: var(--text-bright-accent);
  }
</style>
