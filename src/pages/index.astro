<style lang='scss'>

  ul[role='list'],
  li,
  ol[role='list'] {
    list-style: none;
  }


  .intro {
    display: flex;
    flex-direction: column;
    gap: 2rem;

    @media (min-width: 768px) {
      gap: 3rem;
      justify-content: flex-end;
      flex-direction: row-reverse;
    }
  }

  .intro_inner {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;

    .title {
      font-size: var(--font-size-xl);
      line-height: 1;
      font-weight: 500;
      letter-spacing: -0.02em;
    }

    .description {
      width: auto;
      max-width: 60ch;
      line-height: 1.7;
      letter-spacing: 0em;
      font-weight: 400;
      font-size: inherit;
    }
  }

  .post_section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post_section-header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-direction: row;
  }

  .post_section-header_title {
    font-weight: 00;
    letter-spacing: -0.02em;
  }

  .posts_row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-gap: 1rem;
  }
</style>
