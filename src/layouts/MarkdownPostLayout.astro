---
import BlogLayout from './BlogLayout.astro';
const { frontmatter } = Astro.props;
---

<BlogLayout title={frontmatter.title}>
  <header class='c-block_header' role='presentation'>
    <p class='c-subtitle'>{frontmatter.pubDate.slice(0, 10)}</p>
    <p class='c-subtitle'>Written by: {frontmatter.author}</p>
    <p class='c-caption'>{frontmatter.description}</p>
  </header>

  <img src={frontmatter.image.url} width='300' alt={frontmatter.image.alt} />

  <ul class='tags'>
    {
      frontmatter.tags.map((tag) => (
        <li class='tag'>
          <a href={`/tags/${tag}`}>{tag}</a>
        </li>
      ))
    }
  </ul>

  <div class='c-block_title'>
    <h1 class='c-title'>{frontmatter.title}</h1>
  </div>

  <slot />
</BlogLayout>

<style lang='scss'>
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    margin-bottom: 1.5rem;
  }

  .tag {
    backdrop-filter: blur(12px);
    border-image: initial;
    background-position: 100%;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    margin: 0.25em;
    padding: 0.5em 1em;
    text-transform: capitalize;
  }

  .c-block_header {
    margin-bottom: 1.5rem;

    .c-caption {
      color: var(--text-bright-accent);
      margin-bottom: 0.42rem;
      text-transform: capitalize;
      letter-spacing: -0.033em;
    }

    .c-subtitle {
      color: var(--text-bright-accent);
    }
  }

  .c-block_title {
    margin-bottom: 1.5rem;

    .c-title {
      margin-top: 0;
      font-weight: 600;
      letter-spacing: -0.03em;
      line-height: 1;
      font-size: var(--font-size-xl);
    }
  }
</style>
