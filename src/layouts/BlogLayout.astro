---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Navigation from '../components/Navigation.astro';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <main class='o-main'>
      <div class='o-root'>
        <div class='o-root_inner'>
          <section class='o-container'>
            <div class='o-container_inner'>
              <aside class='o-heading_block'>
                <slot />
              </aside>
            </div>
          </section>
        </div>
      </div>
    </main>
  </body>
</html>

<style is:global lang='scss'>
  $container-width: 100%;
  $container-max-width: 1200px;

  $h1: 3.052rem;
  $h2: 2.441rem;
  $h3: 1.953rem;
  $h4: 1.563rem;
  $h5: 1.25rem;
  $small: 0.8rem;

  $ls: -0.02em;

  $grey: #6b6b6b;

  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );

    --h1: #{$h1};
    --h2: #{$h2};
    --h3: #{$h3};
    --h4: #{$h4};
    --h5: #{$h5};
    --small: #{$small};

    --container-width: #{$container-width};
    --container-max-width: #{$container-max-width};

    --ls: #{$ls};

    --grey: #{$grey};

    --font-size-sm: clamp(0.7rem, 0.09vw + 0.68rem, 0.75rem);
    --font-size-base: clamp(0.88rem, 0.23vw + 0.82rem, 1rem);
    --font-size-md: clamp(1.09rem, 0.43vw + 0.98rem, 1.33rem);
    --font-size-lg: clamp(1.37rem, 0.74vw + 1.18rem, 1.78rem);
    --font-size-xl: clamp(1.71rem, 1.2vw + 1.41rem, 2.37rem);
    --font-size-xxl: clamp(2.14rem, 1.86vw + 1.67rem, 3.16rem);
    --font-size-xxxl: clamp(2.67rem, 2.8vw + 1.97rem, 4.21rem);

    --page-padding: 1.4rem;
    --page-bg: rgb(0, 2, 18);
    --page-max-width: 1280px;
    --transparent: rgba(255, 255, 255, 0);
    --text-bright-accent: rgb(193, 196, 228);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html,
  body,
  nav,
  header,
  h1,
  h2,
  h3,
  h4,
  h5,
  div,
  section,
  p,
  figure,
  blockquote,
  dl,
  dd {
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    vertical-align: baseline;
  }

  ul[role='list'],
  ol[role='list'] {
    list-style: none;
  }

  html:focus-within {
    scroll-behavior: smooth;
  }

  html {
    font-size: 87.5%;
  }

  a:not([class]) {
    text-decoration-skip-ink: auto;
  }

  img,
  picture {
    max-width: 100%;
    display: block;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  body {
    color: #fff;
    line-height: 1.3;
    background-color: var(--page-bg);
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
    font-family: 'Inter', 'IBM Plex Sans', system-ui, sans-serif;
  }

  small,
  .text_small {
    font-size: var(--font-size-sm);
  }

  .o-main {
    display: flex;
    flex: 1 1 auto;
    flex-direction: column;
    min-height: 100vh;
  }

  .o-root {
    --header-height: 48px;
    overflow-x: hidden;
    margin-top: calc(-1 * var(--header-height));
    padding-top: var(--header-height);
    // padding-left: var(--page-padding);
    // padding-right: var(--page-padding);
    margin-bottom: -164px;
    display: flex;
    flex-direction: column;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;

    background: radial-gradient(
      ellipse 80% 50% at 50% 10%,
      rgba(120, 119, 198, 0.3),
      var(--transparent)
    );
  }

  .o-root_inner {
    padding-left: var(--page-padding);
    padding-right: var(--page-padding);
    max-width: var(--page-max-width);
    width: 100%;
    margin: 0px auto;
  }

  .o-container {
    display: flex;
    flex: initial;
    flex-direction: column;
    align-items: center;
  }

  .o-container_inner {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 6rem;
  }

  .o-heading_block {
    position: relative;
    display: flex;
    flex: initial;
    flex-direction: column;
    align-items: center;

    padding-left: var(--page-padding-left);
    padding-right: var(--page-padding-right);
    max-width: var(--page-max-width);
    width: 100%;
    margin: 0px auto;
  }

  .o-caption {
    color: var(--text-bright-accent);
    margin-bottom: 0.42rem;
    text-transform: uppercase;
    letter-spacing: -0.033em;
  }

  .o-title {
    margin-bottom: 0.42rem;
    letter-spacing: -0.03em;
    font-size: var(--font-size-xxl);
    line-height: 1.1;
    font-weight: 600;
  }

  .o-subtitle {
    color: var(--text-bright-accent);
  }
</style>
