    display: block;
    margin: 0;
    padding: 0;
  }

  ul[role='list'],
  li,
  ol[role='list'] {
    list-style: none;
  }

  html:focus-within {
    scroll-behavior: smooth;
  }

  html {
    font-size: 87.5%;
  }

  a {
    text-decoration-skip-ink: auto;
    text-decoration: none;
    color: inherit;
  }

  img,
