---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Navigation from '../components/Navigation.astro';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
  </head>
  <body>
    <!-- <Navigation /> -->

    <div class='b-root'>
      <div class='b-root_inner'>
        <main class='b-main'>
          <div class='b-container'>
            <slot />
          </div>
        </main>
      </div>
    </div>
  </body>
</html>

<style is:global lang='scss'>
  :root {
    --ls: -0.02em;

    --page-bg: rgb(0, 2, 18);
    --page-padding: 1rem;
    --text-base: #fff;
    --border-radius: 0.3rem;
    --text-bright-accent: rgb(193, 196, 228);
    --transparent: rgba(255, 255, 255, 0);

    --font-size-sm: clamp(0.7rem, 0.09vw + 0.68rem, 0.75rem);
    --font-size-base: clamp(0.88rem, 0.23vw + 0.82rem, 1rem);
    --font-size-md: clamp(1.09rem, 0.43vw + 0.98rem, 1.33rem);
    --font-size-lg: clamp(1.37rem, 0.74vw + 1.18rem, 1.78rem);
    --font-size-xl: clamp(1.71rem, 1.2vw + 1.41rem, 2.37rem);
    --font-size-xxl: clamp(2.14rem, 1.86vw + 1.67rem, 3.16rem);
    --font-size-xxxl: clamp(2.67rem, 2.8vw + 1.97rem, 4.21rem);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body,
  h1,
  h2,
  h3,
  h4,
  h5,
  p,
  ul,
  li,
  figure,
  blockquote,
  dl,
  dd {
    display: block;
    margin: 0;
    padding: 0;
  }

  ul[role='list'],
  li,
  ol[role='list'] {
    list-style: none;
  }

  html:focus-within {
    scroll-behavior: smooth;
  }

  html {
    font-size: 87.5%;
  }

  a {
    text-decoration: none;
  }

  img,
  picture {
    max-width: 100%;
    display: block;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  body {
    background-color: var(--page-bg);
    color: var(--text-base);
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    min-height: 100vh;
    text-rendering: optimizeLegibility;
    font-family: 'Inter', system-ui, sans-serif;
  }

  a {
    text-decoration-skip-ink: auto;
    text-decoration: none;
    color: inherit;
  }

  h1 {
    font-size: var(--font-size-md);
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }

  .b-root {
    display: flex;
    flex: 1 1 auto;
    flex-direction: column;
    min-height: 100vh;
  }

  .b-root_inner {
    overflow-x: hidden;
    background: radial-gradient(
      ellipse 80% 50% at 50% -20%,
      rgba(120, 119, 198, 0.3),
      var(--transparent)
    );
  }

  .b-main {
    width: 100%;
    max-width: 90ch;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  .b-container {
    --header-height: 5rem;
    margin-top: calc(1 * var(--header-height));
    padding-top: calc(0.5 * var(--header-height));
    padding-left: var(--page-padding);
    padding-right: var(--page-padding);
  }
</style>
